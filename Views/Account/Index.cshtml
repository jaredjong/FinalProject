@model IndexViewModel
@{
    ViewBag.Title = "Account Index";
}

<h2>@ViewBag.Title.</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Birthday:</dt>
        <dd>@Model.Birthday</dd>
        <dd>
            [@Html.ActionLink("Change your Birthday", "ChangeBirthday")]
        </dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>
        <dd>
            [@Html.ActionLink("Change your Phone Number", "ChangePhoneNumber")]
        </dd>

        <dt>Address:</dt>
        <dd>@Model.StreetAddress</dd>
        <dd>
            [@Html.ActionLink("Change your Street Address", "ChangeAddress")]
        </dd>

        <dt>Password:</dt>
        <dd>
            [@Html.ActionLink("Change your password", "ChangePassword")]
        </dd>

    </dl>
</div>